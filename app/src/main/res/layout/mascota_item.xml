<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFotoMascota"
        android:layout_width="138dp"
        android:layout_height="138dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txvNombreMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="35dp"
        android:text="nombre"
        app:layout_constraintStart_toEndOf="@+id/ivFotoMascota"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvDescripcionMascota"
        android:layout_width="193dp"
        android:layout_height="47dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="15dp"
        android:text="Una breve descripcion de la mascota a ser rescatada"
        app:layout_constraintStart_toEndOf="@+id/ivFotoMascota"
        app:layout_constraintTop_toBottomOf="@+id/txvNombreMascota" />

    <TextView
        android:id="@+id/txvRazaMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:text="raza"
        app:layout_constraintStart_toEndOf="@+id/ivFotoMascota"
        app:layout_constraintTop_toBottomOf="@+id/txvDescripcionMascota" />

    <TextView
        android:id="@+id/txvFechaMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="36dp"
        android:text="fecha"
        app:layout_constraintStart_toEndOf="@+id/txvRazaMascota"
        app:layout_constraintTop_toBottomOf="@+id/txvDescripcionMascota" />
</androidx.constraintlayout.widget.ConstraintLayout>